<% if @ticket_detail.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@ticket_detail.errors.count, "error") %>.
    </div>
    <ul>
    <% @ticket_detail.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
